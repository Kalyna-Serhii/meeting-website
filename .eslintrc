{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint", "import"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "./client/src"]
        ],
        "extensions": [".js", ".jsx", ".vue"]
      }
    }
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-plusplus": "off",
    "no-debugger": "warn",
    "quotes": ["error", "single"],
    "import/no-extraneous-dependencies": "error",
    "@typescript-eslint/no-var-requires": "error",
    "global-require": "error",
    "semi": ["error", "always"],
    "consistent-return": "off",
    "object-curly-newline": "off",
    "import/extensions": "off",
    "max-len": ["warn", { "code": 120 }],
    "no-return-await": "off",
    "indent": "warn"
  }
}
